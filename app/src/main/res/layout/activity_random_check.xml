<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/special_white"
    android:backgroundTintMode="multiply"
    tools:context=".Activity_Random_check"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/random_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#A8FFFFFF"
        android:translationZ="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <ProgressBar
            android:id="@+id/random_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:indeterminateTint="@color/special_red"
            android:progressDrawable="@drawable/progress_bar_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/special_white"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/special_white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf = "parent">

            <TextView
                android:id="@+id/random_fire_sn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginStart= "60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight=".28"
                android:text="Серийный номер: 000200400005220131101" />
            <TextView
                android:id="@+id/random_fire_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart= "60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight=".28"
                android:text="Модель огнетушителя:\nТакая-то" />
            <TextView
            android:id="@+id/random_util_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart= "60dp"
            android:layout_marginEnd="60dp"
            android:layout_gravity="left"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_weight=".28"
                android:clickable="true"
            android:text="Дата утилизации:\nТакая-то" />
            <TextView
                android:id="@+id/random_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart= "60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight=".28"
                android:text="Расположение:\nТакое-то" />
            <TextView
                android:id="@+id/random_last_check_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart= "60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight=".28"
                android:text="Дата последней проверки:\nТакая-то" />
            <TextView
                android:id="@+id/random_next_check_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart= "60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight=".28"
                android:clickable="true"
                android:text="Дата следующей проверки:\n22.04.2022" />

            <TextView
                android:id="@+id/random_last_refile_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart= "60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight=".28"
                android:text="Дата последней перезарядки:\nТакая-то" />
            <TextView
                android:id="@+id/random_next_refile_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart= "60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight=".28"
                android:clickable="true"
                android:text="Дата следующей перезаправки:\n23.03.2022" />
            <TextView
                android:id="@+id/random_current_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart= "60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="left"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_weight=".28"
                android:clickable="true"
                android:text="Текущий статус:\nТакой-то" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="60dp"
                android:layout_weight=".28"
                android:background="@drawable/spinner_border"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent">

                <Spinner
                    android:id="@+id/random_type_choser_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.428"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/image_type_choser"
                    android:layout_width="45dp"
                    android:layout_height="45dp"

                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"

                    android:src="@drawable/drop" />

            </RelativeLayout>
            <Button
                android:id="@+id/random_start_checking_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_style"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp"
                android:text="НАЧАТЬ "
                android:textColor="@color/special_white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/random_type_choser_field" />

            <ImageButton
                android:id="@+id/random_home_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/qr_scanner"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#00FFFFFF"
                android:elevation="100dp"
                android:gravity="center"
                android:src="@drawable/ic_baseline_home_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:src="@drawable/ic_baseline_home_24" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>